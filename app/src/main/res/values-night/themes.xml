<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariantDark</item>
        <item name="actionBarTheme">@style/ThemeOverlay.LightTheme.ActionBar</item>
    </style>

    <style name="ThemeOverlay.LightTheme.ActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>